<Window x:Class="FAHPApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FAHPApp"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Fuzzy AHP" Height="600" Width="900">
    <Window.Resources>
        <x:Array x:Key="ScaleValues" Type="sys:Int32">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32>
            <sys:Int32>5</sys:Int32>
            <sys:Int32>6</sys:Int32>
            <sys:Int32>7</sys:Int32>
            <sys:Int32>8</sys:Int32>
            <sys:Int32>9</sys:Int32>
        </x:Array>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 1. クリテリア入力 -->
        <StackPanel Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="基準 (1 行に 1 つ)" FontWeight="Bold"/>
            <TextBox Height="60" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding CriteriaInput, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- 2. 候補入力 -->
        <StackPanel Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="候補 (1 行に 1 つ)" FontWeight="Bold"/>
            <TextBox Height="60" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding AlternativesInput, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- 3. 比較生成ボタン -->
        <Button Grid.Row="2" Content="ペア比較を生成" Width="150" HorizontalAlignment="Left" Command="{Binding GenerateComparisonsCommand}" Margin="0 0 0 10"/>

        <!-- 4. 基準比較入力エリア（行列形式） -->
        <GroupBox Grid.Row="3" Header="基準間の比較行列">
            <DataGrid ItemsSource="{Binding CriteriaMatrix}" AutoGenerateColumns="True" CanUserAddRows="False" CanUserDeleteRows="False"
                      HeadersVisibility="Column" CanUserSortColumns="False"
                      AutoGeneratingColumn="CriteriaMatrix_AutoGeneratingColumn"
                      BeginningEdit="CriteriaMatrix_BeginningEdit" />
        </GroupBox>

        <!-- 5. 候補比較入力エリア (基準ごとにタブ化) -->
        <GroupBox Grid.Row="4" Header="候補のペア比較 (基準ごと)">
            <TabControl ItemsSource="{Binding AlternativeComparisonTabs}">
                <!-- タブヘッダー -->
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Criterion}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>

                <!-- タブコンテンツ -->
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <DataGrid ItemsSource="{Binding AlternativeMatrix}" AutoGenerateColumns="True" CanUserAddRows="False" CanUserDeleteRows="False"
                                      HeadersVisibility="Column" CanUserSortColumns="False" AutoGeneratingColumn="AltMatrix_AutoGeneratingColumn"
                                      BeginningEdit="AltMatrix_BeginningEdit" />

                            <TextBlock Margin="0,5,0,0" FontWeight="Bold"
                                       Text="{Binding ConsistencyRatio, StringFormat=一貫性比率 (CR): {0:0.####}}" />
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </GroupBox>

        <!-- 6. 計算ボタン -->
        <Button Grid.Row="5" Content="スコアを計算" Width="150" HorizontalAlignment="Left" Command="{Binding ComputeCommand}" Margin="0 10 0 10"/>

        <!-- 7. 基準重み結果 -->
        <GroupBox Grid.Row="6" Header="基準の重み">
            <StackPanel>
                <DataGrid ItemsSource="{Binding Results}" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" CanUserSortColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Criterion" Binding="{Binding Criterion}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Margin="0,5,0,0" FontWeight="Bold"
                           Text="{Binding CriteriaConsistencyRatio, StringFormat=一貫性比率 (CR): {0:0.####}}" />
            </StackPanel>
        </GroupBox>

        <!-- 8. 候補スコア結果 -->
        <GroupBox Grid.Row="7" Header="候補の総合スコア">
            <StackPanel>
                <DataGrid ItemsSource="{Binding AlternativeResults}" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" CanUserSortColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Alternative" Binding="{Binding Alternative}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Score" Binding="{Binding Score}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Margin="0,5,0,0" FontWeight="Bold"
                           Text="{Binding AlternativeConsistencyRatio, StringFormat=統合一貫性比率 (CR): {0:0.####}}" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
